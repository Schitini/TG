<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2"
    android:orientation="vertical"
    tools:context=".DesativarContaActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/logo1"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:id="@+id/rgExcluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu RG: "
        android:inputType="text"
        android:nextFocusRight="@id/senhaExcluir"/>

    <EditText
        android:id="@+id/senhaExcluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite sua senha: "
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnExcluir"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/background_light"
        android:layout_gravity="center"
        android:text="Desativar"/>

</LinearLayout>